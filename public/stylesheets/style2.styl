ul
  margin: 0

h1, h2, h3
  padding: 0
  margin: 0

header, nav, article, aside, section, footer, address
  display: block

header, nav, article, aside, section, footer
  border: 0
  margin: 0px
  padding: 0px

header
  text-align: center

nav ul
  list-style: none
  padding: 0px
  display: block
  clear: right
  background-color: #666
  padding-left: 4px
  height: 24px

nav ul li
  display: inline
  padding: 0px 20px 5px 10px
  height: 24px
  border-right: 1px solid #ccc

nav ul li a
  color: #EFD3D3
  text-decoration: none
  font-size: 13px
  font-weight: bold

nav ul li a:hover
  color: #fff

article
  float: left
  padding: 4px
  width: 600px

a
  color: #D81
  text-decoration: underline

a:hover
  color: #F00

.red-item
  background-color: #88CCFF

div.grippie
  background: #EEEEEE url(../images/grippie.png) no-repeat scroll center 2px
  border-color: #DDDDDD
  border-style: solid
  border-width: 0pt 1px 1px
  cursor: s-resize
  height: 9px
  overflow: hidden

.center
  margin: 0 auto
  padding: 0
  text-align: center

footer
  padding: 0
  margin-top: 10px
  text-align: center

/* Portrait tablet to landscape and desktop */
@media (min-width: 980px) and (max-width: 2000px)  {
    body {
        padding-top: 60px;
	padding-bottom: 0;
    }
}


/* Portrait tablet to landscape and desktop */
@media (min-width: 768px) and (max-width: 979px)  {
    body {
        padding-top: 0;
    	padding-bottom: 0;
    }
}
 
/* Landscape phone to portrait tablet */
@media (max-width: 767px)  {
    body {
        padding-top: 0;
    	padding-bottom: 0;
    }
    .carousel-caption {
        position: absolute;
    }
}
